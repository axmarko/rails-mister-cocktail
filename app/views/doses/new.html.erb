<div class="container my-5">
  <h1>Add a new ingredient</h1>

  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3 col-md-4 offset-md-4">
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.association :ingredient, input_html: { class: 'select2' } %>
      <%= f.input :description %>
      <%= f.submit class: "btn btn-warning", value: "Add ingredient" %>
    <% end %>
    </div>
  </div>
</div>
