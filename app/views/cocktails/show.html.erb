<h1> <%= @cocktail.name %> </h1>

<div class="container"></div>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: "cocktail-image" %>
<h3>
  Ingredients
  <span><%= link_to new_cocktail_dose_path(@cocktail) do %></span>
  <span class="ingredients-add"> <i class="fas fa-plus"></i></span>
  <% end %>
</h3>


<% @cocktail.doses.each do |dose| %>
  <p class="ingredient"> <span class="ingredient-name"> <%= dose.ingredient.name %> </span> - <%= dose.description %>
  <span class="card-cocktail-infos-delete"> <%= link_to dose_path(dose.id), method: :delete do %><i class="fas fa-times"></i> <% end %></span>
<% end %>


<p class="return-page"><%= link_to 'Go back to list', root_path  %></p>


