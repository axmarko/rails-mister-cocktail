<h1>Your Cocktail Menu</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center">
        <div class="card-cocktail m-2">
          <div class="card-cocktail-img"
           style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          </div>
          <div>
            <h5 class="card-cocktail-infos">
              <span class="card-cocktail-infos-name"> <%= link_to cocktail.name, cocktail_path(cocktail) %> </span>
              <span class="card-cocktail-infos-delete"> <%= link_to cocktail_path(cocktail), method: :delete do %> </span>
              <i class="fas fa-times"></i></span>
              <% end %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
